@model VideoUpload.Core.Entities.Post
@{
    ViewBag.Title = "Details";
}

@Html.Partial("_Modal")

<div class="col-md-8 col-sm-8">
    <article>

        <h3>@ViewBag.Header</h3>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <span class="glyphicon glyphicon-upload"></span> Uploaded by: @Model.User.UserName
            </div>
            <div class="text-right col-md-6 col-sm-6 col-xs-6">
                <span class="glyphicon glyphicon-time"></span> @Model.DateUploaded.ToClientTime()
            </div>
        </div>

        <hr />

        <div class="embed-responsive embed-responsive-16by9">
            <video id="vPlayer" class="embed-responsive-item" controls preload="metadata">
                <source src="@Url.Action("VideoResult", new { fileName = Model.Attachments.First().FileName })" type="@Model.Attachments.First().MIMEType" />
                Your browser does not support playing this video. Please upgrade your browser.
            </video>
        </div>

        <br />

        <p class="lead text-center">@Model.Description</p>

    </article>

    @if (User.Identity.IsAuthenticated)
    {
        <ul class="pager">
            <li class="previous">
                <a href="@Url.Action("posts")">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back to list
                </a>
            </li>
        </ul>
    }
</div>

@section SideBar {
    <div class="col-md-4 col-sm-4">
        @if (User.Identity.IsAuthenticated)
        {
            @Html.Partial("_PostActions", Model)
            @Html.Action("Sidebars")
        }
        else
        {
            @Html.Partial("_SocialSidebar")
        }
    </div>
}

@if (!User.Identity.IsAuthenticated)
{
    <div id="postUrl" class="hidden" data-url="@Url.Action("VideoHasPlayed")" data-id="@Model.PostID"
         data-uploader="@Model.User.UserName" data-hasplayed="@Model.HasPlayedVideo" data-datePlayedVideo="@Model.DatePlayedVideo"></div>
}


@section Script {
    <script src="~/scripts/videos/timeZoneCooke.js"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/scripts/videos/details.js"></script>
    }
    else
    {
        <script src="~/scripts/videos/watch.js"></script>
    }
}