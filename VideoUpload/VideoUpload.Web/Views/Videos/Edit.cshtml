@model VideoUpload.Web.Models.Videos.EditPostViewModel

@{
    ViewBag.Title = "Edit your posts";
}

<div class="container-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>@ViewBag.Header</h1>
        @using (Html.BeginForm("edit", "videos", FormMethod.Post))
        {
          @Html.AntiForgeryToken()
          <div class="form-group">
            @Html.HiddenFor(model => model.PostID)
            @Html.HiddenFor(model => model.UserID)
          </div>
          <div class="form-group">
            @Html.LabelFor(model => model.PlateNumber)
            @Html.EditorFor(model => model.PlateNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.PlateNumber, "", new { @class = "text-danger" })
          </div>
          <div class="form-group">
            @Html.LabelFor(model => model.Description)
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 7, required = "required" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
          </div>
          <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
          </div>
        }        
        <a href="@Url.Action("myposts", new { userName = User.Identity.Name })" class="btn btn-default">Back to your videos</a>
      </div>
    </div>
  </div>
</div>

@section Script {    
  <script src="~/dist/js/videos/edit.js"></script>
}