@model VideoUpload.Core.Entities.Post

<article class="posted-article">

    <h3>Car plate no. @Html.PostActionLink(Model)</h3>

    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            <span class="glyphicon glyphicon-upload"></span> Uploaded by: @Model.User.UserName
        </div>
        <div class="text-right col-md-6 col-sm-6 col-xs-6">
            <span class="glyphicon glyphicon-time"></span> @Model.DateUploaded.ToClientTime()
        </div>
    </div>

    <hr />
    
    <a href="@Url.Action("post", new {
            year = Model.DateUploaded.Year,
            month = Model.DateUploaded.Month,
            postID = Model.PostID,
            plateNo = Model.PlateNumber})">
        
        <img class="img-responsive vthumbnail" src="@Url.Content($"~/uploads/thumbnails/{Model.Attachments.First().ThumbnailFileName}")"
             alt="Car plate no. @Model.PlateNumber" title="Car plate no. @Model.PlateNumber" />
    </a>        
    
    <br />

    <div>@Html.Raw(Model.Description)</div>
        
</article>