@using VideoUpload.Web.Common
@model IEnumerable<VideoUpload.Web.Models.PostViewModel>

@{
    ViewBag.Title = "Search results";
}

<h2>Search results</h2>
<hr />
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="media">
            <div class="media-left">
                <a href="@Url.Action("details", new { postID = @item.PostID,
                        plateNumber = @item.PlateNumber, @item.Attachments.FirstOrDefault().FileName })">
                    <img src="~/Uploads/Thumbnails/@item.Attachments.FirstOrDefault().ThumbnailFileName" alt="Car number @item.PlateNumber" width="200" height="100" />
                </a>
            </div>
            <div class="media-body">
                <h6 class="pull-right"><b>Date uploaded:</b> @item.DateUploaded.ToClientTime()</h6>
                <h4 class="media-heading">@item.PlateNumber</h4>
                
                <p class="text-success">@item.Description</p>
            </div>
        </div>
    }
}
else
{
    <p class="alert alert-warning">No result found.</p>
}


