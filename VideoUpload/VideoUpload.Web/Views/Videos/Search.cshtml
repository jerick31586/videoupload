@model IEnumerable<VideoUpload.Web.Models.PostViewModel>

@{
    ViewBag.Title = "Search results";
}

<h2>Search results</h2>
<hr />
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img src="~/Content/Images/porsche-logo-header.jpg" alt="video image" width="100" height="100" />
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">@item.PlateNumber</h4>
                <p>@item.Description</p>
            </div>
        </div>
        <hr />
    }
}
else
{
    <p class="alert alert-warning">No result found.</p>
}
