@model VideoUpload.Web.Models.PostViewModel

@{
    ViewBag.Title = "Details";    
}

<p class="pull-right">
    @Html.ActionLink("Back to List", "index", null, new { @class = "btn btn-info btn-xs" }) |
    @Html.ActionLink("Edit post", "edit", new { postID = Model.PostID }, new { @class = "btn btn-info btn-xs" }) |
    @Html.ActionLink("Send to customer", "send", new { p = Model.PostID, v = ViewBag.FileName }, new { @class = "btn btn-success btn-xs " })
</p>

<h2>Details</h2>
<hr />

<div class="panel panel-danger">
    <div class="panel-heading">
        <b>Title:</b> @Html.DisplayFor(model => model.Title)
        <span class="pull-right"><b>Owner:</b> @Html.DisplayFor(model => model.Owner)</span>
    </div>
    <div class="panel-body">

        <p><b>Description:</b><br /> @Html.DisplayFor(model => model.Description)</p>

    </div>
    <div class="embed-responsive embed-responsive-16by9">
        <video class="embed-responsive-item" autoplay controls src="@Url.Action("VideoResult", new { fileName = ViewBag.FileName })" type="@ViewBag.MIMEType"></video>
    </div>
</div>
