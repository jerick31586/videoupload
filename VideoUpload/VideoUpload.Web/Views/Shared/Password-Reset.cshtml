@model VideoUpload.Web.Models.PasswordResetViewModel

@{
    ViewBag.Title = "Reset your password";
}

<section class="reset-password-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-8">
        <h2>@ViewBag.Header</h2>

        @using (Html.BeginForm("passwordreset", "account", FormMethod.Post, new { @class = "form-defaults" }))
        {
          <p class="text-danger">@ViewBag.Message</p>
          <div class="form-group">
            <label for="email">@ViewBag.EmailLabel</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm", required = "required", autofocus = "autofocus" })

          </div>
          <button type="submit" class="btn btn-default">Send</button>

          if (!User.Identity.IsAuthenticated)
          {
            <a href="@Url.Action("signin","account")">Back to login page.</a>
          }
        }
      </div>
    </div>
  </div>
</section>