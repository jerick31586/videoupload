<header class="hidden-print navbar navbar-inverse navbar-fixed-top" role="banner">

    <div class="container">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a href="@Url.Action("index","videos", new { Area = "" })" class="navbar-brand">Porsche Center Doha</a>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <nav class="navbar-collapse collapse" role="navigation">

                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="@Url.Action("index","videos", new { Area = "" })">
                            Videos
                        </a>
                    </li>
                </ul>                                                               

                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @User.Identity.Name <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">

                            @if (CurrentUser.ManageUser.Any(x => x.Value == "CanRead"))
                            {
                                <li>
                                    <a href="@Url.Action("list","users", new { Area = "" })">
                                        <i class="fa fa-cog fa-fw"></i> Manage users
                                    </a>
                                </li>
                            }
                            <li>
                                <a href="@Url.Action("myposts", "videos", new { Area = "", userName = User.Identity.Name })">
                                    <i class="fa fa-file-video-o fa-fw"></i> My videos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("signout","account", new { Area = "" })">
                                    <i class="fa fa-sign-out fa-fw"></i> Sign out
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <form action="@Url.Action("search", "videos")" method="get" class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" name="q" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

               
            </nav>
        }

    </div>
</header>

