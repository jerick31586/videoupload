@using (Html.BeginForm("search", "videos", FormMethod.Get, new { @class = "navbar-form navbar-right", id = "search-form" }))
{
    <div class="form-group">
        <input  id="v" type="text" name="v" class="form-control" placeholder="Search" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </div>    
}
