@using PagedList;
@using PagedList.Mvc;
@model IPagedList<VideoUpload.Web.Models.UserViewModels.UserViewModel>
@{
  ViewBag.Title = "User list";
}


<section id="users-table-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Manage your users</h2>

        <p>
          <a href="@Url.Action("new")" class="btn btn-default">Add new user</a>
        </p>

        <div class="table-responsive">
          <table class="table table-condensed table-hover">
            <thead>
              <tr>
                <th>Actions</th>
                <th>Username</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var user in Model)
              {
                <tr>
                  <td>
                    <a href="@Url.Action("edit", new { userName = user.UserName })" class="btn btn-default">
                      Edit 
                    </a>
                    <a href="@Url.Action("manage-claims", new { userID = user.UserID, userName = user.UserName })" class="btn btn-default">
                      Manage Activities 
                    </a>
                  </td>
                  <td>@user.UserName</td>
                  <td>@user.FirstName</td>
                  <td>@user.LastName</td>
                  <td>@user.Email</td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>